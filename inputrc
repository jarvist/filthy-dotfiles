set editing-mode emacs 
# emacs better for command line

# rxvt for Model M keyboard at work
"\e[7~": beginning-of-line
"\e[8~": end-of-line
"\eOc": forward-word
"\eOd": backward-word

$if mode=vi
set keymap vi-command
"gg": beginning-of-history
"G": end-of-history
"\C-l": clear-screen

set keymap vi-insert
"jj": vi-movement-mode
"\C-p": history-search-backward 
"\C-l": clear-screen

$endif
